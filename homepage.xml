<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/bghomepaage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="0"
        android:gravity="top"
        android:orientation="horizontal"
        android:background="#556e84"
        android:minWidth="25px"
        android:minHeight="25px">

        <!-- Uppermost part -->
        <ImageButton
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/logout"
            android:background="@drawable/logout" />

        <ImageButton
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:id="@+id/btnaddcategory"
            android:background="@drawable/category" />
        <!-- Heart, trash -->
        <!---
        <Button
            android:text="Add Category"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:scaleType="fitCenter"
            android:id="@+id/btnaddcategory" />
-->


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="start|top"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/applogo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/imageView3"
            android:layout_marginRight="10dp"
            android:layout_marginTop="9.6dp"
            android:layout_marginLeft="20.0dp" />
        <SearchView
            android:layout_width="290.8dp"
            android:layout_height="40dp"
            android:id="@+id/searchView1"
            android:layout_marginTop="25.6dp"
            android:layout_marginRight="23.2dp"
            android:background="#f3f3f3"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/createstudy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:src="@drawable/createstudyimg" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerview" />
        </ScrollView>
        <ImageButton
            android:background="@drawable/addstudy"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/btnaddstudy"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="25dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center|bottom"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_weight="0"
        android:minHeight="85dp"
        android:minWidth="85dp"
        android:background="#ffffff">
        <ImageButton
            android:background="@drawable/option1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/homr"
            android:layout_marginRight="30.0dp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="15dp"
            />
        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/category"
            android:layout_marginLeft="20.0dp"
            android:layout_marginRight="20.0dp"
            android:scaleType="fitCenter"
            android:background="@drawable/option2"
            android:layout_marginBottom="10dp" />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/profile"
            android:layout_marginLeft="30.0dp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="15dp"
            android:background="@drawable/option3" />
    </LinearLayout>

</LinearLayout>
